---
layout: base.njk
title: Eric Trometer
---

<div class="mb-12" x-data="projectFilter()">
  <section class="mb-12 mt-16 sm:mt-24">
    <p class="text-lg font-bold text-gray-900 dark:text-white max-w-2xl">{{ site.tagline }}</p>
  </section>

  {%- set allRoles = [] %}
  {%- set allTags = [] %}
  {%- for project in collections.projects %}
    {%- if project.data.role and project.data.role not in allRoles %}
      {%- set allRoles = (allRoles.push(project.data.role), allRoles) %}
    {%- endif %}
    {%- for tag in (project.data.tags or []) %}
      {%- if tag !== 'project' and tag not in allTags %}
        {%- set allTags = (allTags.push(tag), allTags) %}
      {%- endif %}
    {%- endfor %}
  {%- endfor %}

  <section class="mb-8">
    <h2 class="sr-only">Filter projects</h2>
    {% if allRoles.length %}
    <div class="flex flex-wrap gap-3 items-center">
      <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Role:</span>
      <div class="flex flex-wrap gap-2">
        <button
          type="button"
          @click="setRole('')"
          :class="selectedRole === '' ? 'bg-gray-900 dark:bg-gray-200 text-white dark:text-dark-bg' : 'bg-gray-100 dark:bg-dark-surface text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-dark-border'"
          class="min-h-[44px] px-4 py-2 rounded-full text-sm font-medium transition-colors"
        >
          all work
        </button>
        {% for role in allRoles | sort %}
        <button
          type="button"
          @click="toggleRole('{{ role }}')"
          :class="selectedRole === '{{ role }}' ? 'bg-gray-900 dark:bg-gray-200 text-white dark:text-dark-bg' : 'bg-gray-100 dark:bg-dark-surface text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-dark-border'"
          class="min-h-[44px] px-4 py-2 rounded-full text-sm font-medium transition-colors"
        >
          {{ role }}
        </button>
        {% endfor %}
      </div>
    </div>
    {% endif %}
    {% if allTags.length %}
    <div class="flex flex-wrap gap-3 items-center mt-4">
      <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Tags:</span>
      <div class="flex flex-wrap gap-2">
        {% for tag in allTags | sort %}
        <button
          type="button"
          @click="toggleTag('{{ tag }}')"
          :class="selectedTags.includes('{{ tag }}') ? 'bg-gray-900 dark:bg-gray-200 text-white dark:text-dark-bg' : 'bg-gray-100 dark:bg-dark-surface text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-dark-border'"
          class="min-h-[44px] px-4 py-2 rounded-full text-sm font-medium transition-colors"
        >
          {{ tag }}
        </button>
        {% endfor %}
      </div>
    </div>
    {% endif %}
  </section>

  <section x-ref="grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for project in collections.projects %}
    <div
      data-project="{{ project.data.slug }}"
      data-role="{{ project.data.role or '' }}"
      data-tags='{{ (project.data.tags or []) | json }}'
      x-show="isVisible('{{ project.data.role or '' }}', {{ (project.data.tags or []) | json }})"
      x-transition:enter="transition ease-out duration-200"
      x-transition:enter-start="opacity-0"
      x-transition:enter-end="opacity-100"
      x-transition:leave="transition ease-in duration-150"
      x-transition:leave-start="opacity-100"
      x-transition:leave-end="opacity-0"
    >
      {% set projectUrl = project.url %}
      {% set projectTitle = project.data.title %}
      {% set projectTags = project.data.tags or [] %}
      {% set projectThumbnail = project.data.thumbnail %}
      {% set projectAlt = project.data.alt or project.data.title %}
      <article class="rounded-lg overflow-hidden border border-gray-200 dark:border-dark-border bg-white dark:bg-dark-surface transition-shadow hover:shadow-md dark:hover:shadow-black/50">
        <a href="{{ projectUrl }}" class="block group">
          <div class="aspect-video bg-gray-100 dark:bg-dark-bg overflow-hidden">
            {% if projectThumbnail %}
            <img
              src="{{ projectThumbnail }}"
              alt="{{ projectAlt }}"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
            />
            {% else %}
            <div class="w-full h-full flex items-center justify-center text-gray-400 dark:text-gray-500 text-sm p-4 text-center">
              {{ projectTitle }}
            </div>
            {% endif %}
          </div>
          <div class="p-4">
            <h2 class="font-medium text-gray-900 dark:text-gray-200 group-hover:text-gray-600 dark:group-hover:text-gray-400 transition-colors line-clamp-2">
              {{ projectTitle }}
            </h2>
            {% set displayTags = [] %}
            {% for tag in projectTags %}
              {% if tag !== 'project' %}
                {% set displayTags = (displayTags.push(tag), displayTags) %}
              {% endif %}
            {% endfor %}
            {% if displayTags.length %}
            <p class="mt-2 text-xs text-gray-500 dark:text-gray-400 flex flex-wrap gap-1">
              {% for tag in displayTags %}
              <span class="bg-gray-100 dark:bg-dark-bg px-2 py-0.5 rounded">{{ tag }}</span>
              {% endfor %}
            </p>
            {% endif %}
          </div>
        </a>
      </article>
    </div>
    {% endfor %}
  </section>
</div>

<script>
  document.addEventListener('alpine:init', () => {
    Alpine.data('projectFilter', () => ({
      selectedRole: '',
      selectedTags: [],
      _reducedMotion: typeof window !== 'undefined' && window.matchMedia && window.matchMedia('(prefers-reduced-motion: reduce)').matches,
      _animDurationMs: 420,
      _animEasing: 'cubic-bezier(0.2, 0.8, 0.2, 1)',
      _leaveDurationMs: 150,
      _flipTimer: null,
      _tagCache: new WeakMap(),
      _getItems() {
        const grid = this.$refs?.grid;
        if (!grid) return [];
        return Array.from(grid.querySelectorAll('[data-project]'));
      },
      _snapshot() {
        const items = this._getItems();
        const map = new Map();
        for (const el of items) {
          const id = el.getAttribute('data-project');
          const visible = el.getClientRects().length > 0;
          map.set(id, { el, visible, rect: visible ? el.getBoundingClientRect() : null });
        }
        return map;
      },
      _getParsedTags(el) {
        if (this._tagCache.has(el)) return this._tagCache.get(el);
        const tagsRaw = el.getAttribute('data-tags') || '[]';
        let tags = [];
        try {
          tags = JSON.parse(tagsRaw);
        } catch {
          tags = [];
        }
        this._tagCache.set(el, tags);
        return tags;
      },
      _expectedVisibleCount() {
        const items = this._getItems();
        let count = 0;
        for (const el of items) {
          const role = el.getAttribute('data-role') || '';
          const tags = this._getParsedTags(el);

          const roleMatch = !this.selectedRole || role === this.selectedRole;
          const tagMatch =
            this.selectedTags.length === 0 ||
            this.selectedTags.some((t) => tags.includes(t));

          if (roleMatch && tagMatch) count += 1;
        }
        return count;
      },
      _runFlip(first, last) {
        for (const [id, a] of first.entries()) {
          const b = last.get(id);
          if (!a || !b) continue;
          if (!a.visible || !b.visible) continue;
          if (!a.rect || !b.rect) continue;

          const dx = a.rect.left - b.rect.left;
          const dy = a.rect.top - b.rect.top;
          if (!dx && !dy) continue;

          a.el.animate(
            [
              { transform: `translate(${dx}px, ${dy}px)` },
              { transform: 'translate(0px, 0px)' }
            ],
            { duration: this._animDurationMs, easing: this._animEasing }
          );
        }
      },
      _animateLayout(mutator) {
        if (this._reducedMotion) {
          mutator();
          return;
        }

        if (this._flipTimer) clearTimeout(this._flipTimer);
        this._flipTimer = null;

        const first = this._snapshot();
        mutator();

        this.$nextTick(() => {
          // Phase 1: immediate reflow (mainly for showing items)
          const mid = this._snapshot();
          this._runFlip(first, mid);

          // Phase 2: only needed when items are being hidden (grid compacts after leave transition)
          const firstVisibleCount = Array.from(first.values()).filter(v => v.visible).length;
          const expectedVisibleCount = this._expectedVisibleCount();
          const isHiding = expectedVisibleCount < firstVisibleCount;

          if (isHiding) {
            this._flipTimer = setTimeout(() => {
              const last = this._snapshot();
              this._runFlip(mid, last);
              this._flipTimer = null;
            }, this._leaveDurationMs + 30);
          }
        });
      },
      setRole(role) {
        this._animateLayout(() => {
          this.selectedRole = role;
        });
      },
      toggleRole(role) {
        this._animateLayout(() => {
          this.selectedRole = this.selectedRole === role ? '' : role;
        });
      },
      toggleTag(tag) {
        this._animateLayout(() => {
          const i = this.selectedTags.indexOf(tag);
          if (i >= 0) this.selectedTags.splice(i, 1);
          else this.selectedTags.push(tag);
        });
      },
      isVisible(role, tags) {
        const roleMatch = !this.selectedRole || role === this.selectedRole;
        const tagMatch = this.selectedTags.length === 0 || this.selectedTags.some(t => tags.includes(t));
        return roleMatch && tagMatch;
      }
    }));
  });
</script>
